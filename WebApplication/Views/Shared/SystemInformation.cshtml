@model ISystemInformation
@if(Model != null)
{
	<div class="alert @Model.GetAlertClass("alert-success", "alert-danger", "alert-info", "alert-warning")">
		@if(!string.IsNullOrEmpty(Model.Heading))
		{
			<h2>@Model.Heading</h2>
		}
		@if(!string.IsNullOrEmpty(Model.Information))
		{
			<p>@Model.Information</p>
		}
		@if(Model.DetailedInformation != null && Model.DetailedInformation.Any())
		{
			<ul>
				@foreach(var item in Model.DetailedInformation)
				{
					<li>@item</li>
				}
			</ul>
		}
	</div>
}